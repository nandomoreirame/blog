{% capture words %}
  {{ page.content | number_of_words | minus: 180 }}
{% endcapture %}
{% unless words contains "-" %}
  <div class="date">
    <i class="far fa-clock"></i>
    {% assign minutes = words | plus: 180 | divided_by: 180 %}
      {{ minutes }}
    {% if minutes == 1 %}
      {{ " minute to read." }}
    {% else %}
      {{ " minutes to read." }}
    {% endif %}
  </div>
{% endunless %}
