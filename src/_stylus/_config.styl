$font-family-sans-serif = 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
$font-family-serif = 'PT Serif', 'Palatino Linotype', 'Book Antiqua', Palatino, 'Times New Roman', Times, Georgia, serif
$font-family-monospace = SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace
$font-family-base = $font-family-sans-serif
$font-family-heading = 'Montserrat', $font-family-sans-serif

$primary-color = #5bbc8f
$secondary-color = #415262

timingFunction = cubic-bezier(0.565, 1.65, 0.765, 0.88)

$mobile = 480px
$tablet = 768px
$desktop = 1024px
